parserOptions:
  ecmaVersion: 6
  sourceType: module
  ecmaFeatures:
    jsx: true

plugins:
  - bem-xjst

env:
  browser: true
  node: true
  es6: true
  bem-xjst/bemhtml: true
  bem-xjst/bemtree: true

globals:
  # YModules
  modules: false

rules:
  curly: [error, multi-line]
  react/display-name: 0
  no-debugger: 0
  react/prop-types: 0

extends: [pedant, plugin:react/recommended]



